datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id              String   @id
  username        String?
  firstName       String
  lastName        String?
  photoUrl        String?
  languageCode    String?
  isPremium       Boolean?
  isBot           Boolean?
  allowsWriteToPm Boolean?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @default(now()) @updatedAt
}
